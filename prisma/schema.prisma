
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  email String @unique
  passwordHash String
  passwordSalt String

  sessions Session[]
}

model Session {
  id String @id @default(uuid())
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  userId String
}
